<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgv_item_fish_image"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentRight="false"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="false"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgv_item_fish_image"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_item_fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="NAME"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_item_fish_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="SPECIES"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/tv_item_fish_name" />

        <TextView
            android:id="@+id/tv_item_fish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:text="date"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/tv_item_fish_name" />

        <TextView
            android:text="최대힘"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_fish_max_label"
            android:layout_below="@+id/tv_item_fish_name"
            android:layout_alignStart="@+id/tv_item_fish_name"
            android:textSize="14sp"
            android:textColor="@color/colorBase" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_fish_max"
            android:layout_toRightOf="@+id/tv_item_fish_max_label"
            android:layout_alignBaseline="@+id/tv_item_fish_max_label"
            android:textSize="14sp"
            android:textColor="@color/colorTransParentBase70" />
        <TextView
            android:text="평균힘"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_fish_max_label"
            android:id="@+id/tv_item_fish_avg_label"
            android:textSize="14sp"
            android:textColor="@color/colorBase" />
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_fish_avg"
            android:layout_toRightOf="@id/tv_item_fish_avg_label"
            android:layout_alignBaseline="@+id/tv_item_fish_avg_label"
            android:textSize="14sp"
            android:textColor="@color/colorTransParentBase70" />


    </RelativeLayout>


</RelativeLayout>
