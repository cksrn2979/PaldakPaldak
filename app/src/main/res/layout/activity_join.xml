<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingTop="30dp">

        <TextView
            android:text="회원가입 정보 입력"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:gravity="center" />

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgv_user_img"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/et_join_id"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/shape3"
                android:hint="아이디"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_width="200dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_join_pw"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/shape3"
                android:hint="비밀번호"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_width="200dp"
                android:inputType="textPassword" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/et_join_name"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/shape3"
                android:hint="이름"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_width="120dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/join_rg_male">



                <RadioButton
                    android:text="남자"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn_join_male"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:checked="true" />

                <RadioButton
                    android:text="여자"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn_join_female"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary" />

            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/et_join_birth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape3"
                    android:hint="생년월일"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="200dp"
                    android:inputType="number"
                    />

                <Button
                    android:id="@+id/btn_join_birth"
                    android:layout_width="80dp"
                    android:layout_height="31dp"

                    android:background="@drawable/shape1"
                    android:text="날짜 입력"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/et_join_phone"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape3"
                    android:hint="핸드폰번호"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_width="200dp"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/btn_join_check_message"
                    android:layout_width="80dp"
                    android:layout_height="30dp"

                    android:background="@drawable/shape1"
                    android:text="인증"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/et_join_authorization_number"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape3"
                    android:hint="인증번호"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_width="120dp"
                    android:layout_gravity="left|center" />

                <Button
                    android:id="@+id/btn_join_authorization"
                    android:layout_width="80dp"
                    android:layout_height="30dp"

                    android:background="@drawable/shape1"
                    android:text="인증"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <TextView
                android:text="휴대폰 번호 인증이 필요합니다."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_join_message"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/btn_join_join"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape1"
                android:text="@string/btn_join"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_join_cancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape1"
                android:text="취소"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
